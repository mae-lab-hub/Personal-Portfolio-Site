<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!--Contect for updating a contact-->

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6 bg-dark text-light rounded p-5">
            <h1 class="text-center "><%= title%> </h1>

            <form method="POST" class="form">
                <div class="form-group">
                    <label for="contact_nameTextField">Contact Name: </label>
                    <input type="text" class="form-control"
                    id="contact_nameTextField"
                    name="contact_name"
                    value="<%= contact.contact_name%>"
                    required>               
                </div>
                <div class="form-group">
                    <label for="contact_numberTextField">Contact Number: </label>
                    <input type="text" class="form-control"
                    id="contact_numberTextField"
                    name="contact_number"
                    value="<%= contact.contact_number%>"
                    required>               
                </div>
                <div class="form-group">
                    <label for="email">Email: </label>
                    <input type="text" class="form-control"
                    id="emailTextField"
                    name="email"
                    value="<%= contact.email%>"
                    required>               
                </div>
                <!--Buttons-->
                <div class="text-center m-5 ">
                    <button class="btn btn-primary m-3" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>

                    <a href="/contact-list" class="btn btn-warning  m-3">
                    <i class="fas fa-undo"></i> Cancel</a>
                
                    <a href="/contact-list/delete/<%=contact._id%>" class="btn btn-danger m-3"><i class="fas fa-trash-alt"></i> Delete</a>
                </div>
            </form>
        </div>
    </div>
</div>



<%- include ../partials/bottom_nav.ejs %>

